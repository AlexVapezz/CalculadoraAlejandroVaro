<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="10dp"
        android:background="@color/io_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text=""/>

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="28dp"
            android:textColor="@color/green"
            android:text=""/>

    </LinearLayout>

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonClear"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="C"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonBracketLeft"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text="("
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonBracketRight"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text=")"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDivision"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text="รท"
                android:textSize="15sp" />

        </TableRow>
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSeven"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="7"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEight"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="8"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNine"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="9"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMultiply"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text="x"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonBinario"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text="BIN"
                android:textSize="15sp" />

        </TableRow>
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFour"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="4"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFive"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="5"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSix"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="6"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMinus"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text="-"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonHexadecimal"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text="HEX"
                android:textSize="15sp" />

        </TableRow>
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonOne"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="1"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonTwo"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="2"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonThree"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="3"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPlus"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/orange"
                android:text="+"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDecimal"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/green_darker"
                android:text="DEC"
                android:textSize="15sp" />

        </TableRow>
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/buttonA"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="A"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/buttonB"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="B"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/buttonC"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="C"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/buttonD"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="D"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/buttonE"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="E"
                android:textSize="15sp" />

        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonF"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:visibility="gone"
                android:text="F"
                android:textSize="15sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCero"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="0"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDot"
                style="@style/Button_Style"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="."
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEqual"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="="
                android:textSize="15sp" />

        </TableRow>

    </TableLayout>
</LinearLayout>